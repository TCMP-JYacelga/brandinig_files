<div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="row">
							<div class="col-sm-12">
								<h2 class="panel-title">
									<span id="loanCaret" class = "fa fa-caret-up pull-left cursor_pointer toggle-handler"></span>								
									<span class="ft-padding-l ">{{getLabel "lbl.role.loan" "Loan"}}</span>
								</h2>
							</div>
						</div>
					</div>
					<div id="loanAssetBody" class="panel-body">
					{{#each assets}}
						{{#selectAsset assetId "07"}}
								<div id="loanFunctionTableDiv">
								{{#if isFunction }}
									<table class="view-grid" style="width:100%">
										<tbody>
											<tr class="view-grid-header">
												<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.privfunction" "Function"}}</td><td class="view-grid-header-text">{{getLabel "lbl.role.dtls" "Details"}}</th>
											</tr>
											{{#if reports}}
												<tr class="view-grid-body">
													<td class="view-grid-body-content">{{getLabel "lbl.role.report" "Reports"}}</td>
													<td class="view-grid-body-content" style="width:80%;">
														{{getListExpression reports "reportType"}}	
													</td>
												</tr>
											{{/if}}
											{{#if alerts}}
											<tr class="view-grid-body">
												<td class="view-grid-body-content">{{getLabel "lbl.role.alert" "Alerts"}}</td>
												<td class="view-grid-body-content" style="width:80%;">
													{{getListExpression alerts "alertType"}}	
												</td>
											</tr>
											{{/if}}
											
										</tbody>
									</table>
									{{/if}}	
								</div>
							{{/selectAsset}}
						{{/each}}	
						
						<!-- Start of :Loan Service - Privileges Table -->
						{{#each assets}}
							{{#selectAsset assetId "07"}}
								{{#if permissions}}
									<div class="ft-margin-t" id="laonPrivileges">
										<table class="view-grid" style="width:100%">
											<thead>
												<tr><td colspan="25" class="view-grid-section-header">{{getLabel "lbl.role.privileges" "Privileges"}}</td></tr>
												<tr class="view-grid-header">
													<th class="view-grid-header-text" >{{getLabel "lbl.role.type" "Type"}}</th>
													<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.privView" "View"}}</th>
													<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.privEdit" "Edit"}}</th>
													<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.privAppr" "Approve"}}</th>
												</tr>		
											</thead>
											<tbody>							
												{{#each permissions}}
													<tr class="view-grid-body">
														<td class="view-grid-header-text view-grid-body-content" >{{getColoredExpression colorClass screenName}}</td>
																		{{#ifCond rmForView '==' "Y" }}
																		{{#if view}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >
															<i class="fa fa-check"></i>
														</td>
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/if}}
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/ifCond}} 
																		{{#ifCond rmForEdit '==' "Y" }}
																		{{#if edit}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >
															<i class="fa fa-check"></i>
														</td>
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/if}}
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/ifCond}}
																		{{#ifCond rmForAuth '==' "Y" }}	
																		{{#if auth}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >
															<i class="fa fa-check"></i>
														</td>
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/if}}
																		{{else}}
														<td class="view-grid-header-text view-grid-body-content" style="width:20%;" ></td>
																		{{/ifCond}}
													</tr>											
												{{/each}}											
											</tbody>
										</table>																				
									</div>
								{{/if}}
							{{/selectAsset}}
						{{/each}}
						<!-- End of Loan Service - Privileges Table -->			
						<!-- Start of Loan - Account table -->		
						{{#each assets}}
							{{#selectAsset assetId "07"}}
							  {{#unless granularPermission.loans}}		
								{{#if accounts}}			
								<div class="ft-margin-t" id="brAccountTableDiv">
									<table class="view-grid" style="width:100%">
										<thead>
											<tr><td colspan="25" class="view-grid-section-header">{{getLabel "lbl.role.acct" "Accounts"}}</td></tr>
											<tr class="view-grid-header">
												<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.acctNo" "Account No"}}</th>
												<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.acctNm" "Account Name"}}</th>
												<th class="view-grid-header-text" style="width:20%;">{{getLabel "lbl.role.clientDesc" "Client Description"}}</th>
											</tr>		
										</thead>
										<tbody>							
											{{#each accounts}}
												<tr class="view-grid-body">
													<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass accountNo}}</td>
													<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass accountName}}</td>
													<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass subsidiaryName}}</td>
												</tr>											
											{{/each}}													
										</tbody>
									</table>							
								</div>
								{{/if}}
							  {{/unless}}	
							{{/selectAsset}}
						{{/each}}		
						<!-- End of Loan -Account table -->						
						<!-- start of granular previlages table -->
						{{#each assets}}
							{{#selectAsset assetId "07"}}
								{{#if granularPermission.loans}}
									<div class="ft-margin-t" id="loanGranularDiv">
										<div style="max-width:1268px !important;overflow-x:auto; width: 100%;">
											<table class="view-grid" style="width:100%">
												<thead>
													<tr><td colspan="25" class="view-grid-section-header">Loan Granular Privileges</td></tr>
													<tr class="view-grid-header">
														<th class="view-grid-header-text" style="width:20%;" colspan="3">Type</th>
														{{#each (splitOperation granularPermission.loansOperations) }}
															<th class="view-grid-header-text hidden" style="width:20%;" id="grLoanColHdr_{{@index}}"  rowspan="2">{{colName}}</th>
														{{/each}}														
													</tr>		
													<tr class="view-grid-header">
														<th class="view-grid-header-text" style="width:20%;">Obligor Id</th>
														<th class="view-grid-header-text" style="width:20%;">Obligation Id</th>
														<th class="view-grid-header-text" style="width:20%;">Account Name</th>
													</tr>
												</thead>
												<tbody>							
													{{#each granularPermission.loans}}
														<tr class="view-grid-body">
															<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass accountNo}}</td>
															<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass obligatorId}}</td> 
															<td class="view-grid-header-text view-grid-body-content" style="width:20%;" >{{getColoredExpression colorClass accountName}}</td>
															{{#each (splitMask mask) }}
																{{#if isAssign}}
																	<td class="view-grid-header-text view-grid-body-content hidden" 
																		id="chkGranView_{{../../assetId}}_{{@index}}_{{../accountId}}" style="width:20%;" >
																	<i class="fa fa-check"></i>
																	</td>														
																{{else}}
																	<td class="view-grid-header-text view-grid-body-content hidden" 
																		id="chkGranView_{{../../assetId}}_{{@index}}_{{../accountId}}" style="width:20%;" ></td>
																{{/if}} 
															{{/each}}														
														</tr>											
													{{/each}}											
												</tbody>
											</table>
										</div>
									</div>
								{{/if}}
							{{/selectAsset}}
						{{/each}}
						<!-- end of granular previlages table -->							
					</div>
				</div>
			</div>
			
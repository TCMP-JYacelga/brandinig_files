<div class="panel panel-default">
	<div class="panel-heading">
		<div class="row">
			<div class="col-sm-12">
				<h2 class="panel-title">
					<span id="reportsInfoCaret" class="fa fa-caret-up pull-left cursor_pointer toggle-handler"></span>
					<span>{{getLabel "lbl.role.report" "Reports"}}</span> 
					<img id="reportsAll_{{assetid}}" data-version="{{ assignAllReports_version }}" src="{{checkBoxIcon assignAllReports}}" class="chkBoxAlign" width="16"
						height="16" border="0"> 
					<label id="reportsAll_{{assetid}}" for="reportsAll_{{assetid}}" class="checkbox-inline noLeftPadding">{{getLabel "lbl.role.report1" "All"}}</label>
					<label id="lblReportCount" class="checkbox-inline pull-right">{{reportsAssignedCount}} of {{reportsCount}}{{getLabel "lbl.role.report2" " Selected"}}</label>
				</h2>
			</div>
		</div>
	</div>
	<div  id="reportsInfoDiv" class="panel-body">
		<div class="row grid">
			<table class="view-grid" style="width: 99%">
				<thead>
					<tr class="view-grid-header">
						<td class="view-grid-header-text" style="width: 10%"></td>
						<td class="view-grid-header-text">{{getLabel "lbl.role.report3" "Report"}}</td>
					</tr>
				</thead>
				<tbody>
					{{#each reports}}
					<tr class="view-grid-body">
						<td class="view-grid-body-content text-center "><a
							class="limit-reached test"> <img
								id="chkRep_{{../assetid}}_{{reportId}}"
								data-reportid = "{{ reportId }}"
								data-reporttype = "{{ reportType }}"
								data-assetid="{{../assetId}}"
								data-version = "{{ version }}"
								data-digest = "{{ digest }}"
								src="{{checkBoxIcon assignedFlag}}" width="16" height="16"
								border="0"></a></td>
						<td class="view-grid-body-content">{{reportType}}</td>
					</tr>
					{{else}}
					<tr class="view-grid-body">
						<td class="view-grid-body-content" colSpan="4"
							style="padding-bottom: 1%;">&nbsp</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
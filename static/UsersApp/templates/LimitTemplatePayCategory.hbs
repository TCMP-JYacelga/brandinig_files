										  			<td class="view-grid-body-content">
											  			<select id="PaymentCategory_checker_{{categoryCode}}" name="PaymentCategory_checker_{{categoryCode}}" data-categoryCode="{{ categoryCode }}" data-categoryCode="{{ categoryDescription }}" class="form-control profileSelect" disabled="disabled" tabindex="1">
															<option value="Select" >{{getLabel "lbl.clientUser.select" "Select"}}</option>
															{{custProfileSelectOption ../profileList tempTypeCode tempTypeDescription }}																	
